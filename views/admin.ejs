<%- include("partials/header") %>

<section class="container-fluid sectionMargin">
    <div class="row">
        <article class="blurb aside col-md-2 mt-4">
            <h2>Join our newsletter</h2>
            <hr class="slash-1" />
            <form>
                <div class="form-group">
                    <label id="newsletter" for="email">Keep up to date with our future events. Never know where we might pop up next!</label>
                    <input type="email" class="form-control" id="email" placeholder="name@example.com">
                </div>
                <button id="submit" class="btn" type="submit">Submit</button>
            </form>
        </article>
        
        <article class="blurb col-md-8 col-sm-12 px-0">
            <div id="postContainer" class="post">
                <img id="postImage" src="" />
                <h2 id="postTitle">Post Example</h2>
                <hr class="slash-1">
                <p id="postDesc" class="lead">Description will also appear in the "Blurbs" section!</p>
                <p id="postContent" class="lead">Please use the form below for a spin. The Announcements page can also be easily connected with a CMS for broader control.</p>
            </div>
            <div class="post">
                <form id="postForm" action="#">
                    <label id="image-submit" for="image">Enter an image URL (Optional):</label>
                    <input type="text" name="imageUrl"/>
                    
                    <label id="title" for="title">Title:</label>
                    <input type="text" name="title" />

                    <hr class="slash-1">

                    <label id="description">Description:</label>
                    <input type="text" name="description" />

                    <label id="content" for="content">Content:</label>
                    <textarea type="text" name="content"></textarea>
                    <button id="postAnnouncement" class="btn" type="submit">Submit</button>
                </form>
            </div>
        </article>
        
        <article class="blurb aside col-md-2 mt-4">
            <h2>Blurbs:</h2>
            <hr class="slash-1">
            <ul>
                <li><i class="fas fa-ice-cream"></i>
                    Post Descriptions Appear here!
                </li>
                <li id="listDesc"><i class="fas fa-ice-cream"></i>
                </li>
            </ul>
        </article>
    </div>
</section>
<script src="/js/postAnnouncement.js"></script>
<%- include("partials/footer") %>